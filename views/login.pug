extends layout
block content
    div(class="loginPanel" id="loginPanel")

        form(action="/login" method="POST")
            label Masz już konto? ZALOGUJ SIĘ
            br
            label(id="loginNameLabel" for="login") Login:
            br
            input(type="text" id="login" name="login")
            br
            label(id="loginPasswordLabel" for="password") Hasło:
            br
            input(type="password" id="password" name="password")
            br
            input(type="submit" id="loginButton" value="ZALOGUJ SIĘ")
            br
            label(id="wrongPassword")=message
    div(class="loginPanel" id="registerPage")
        form(action="/register" method="POST")
            label Nie masz jeszcze konta? ZAREJESTRUJ SIĘ
            br
            label(id="RegisterNameLabel" for="Rlogin") Login:
            br
            input(type="text" id="Rlogin" name="Rlogin")
            br
            label(id="RegisterMailLabel" for="Rmail") e-mail:
            br
            input(type="text" id="Rmail" name="Rmail")
            br
            label(id="RegisterPasswordLabel" for="Rpassword") Hasło:
            br
            input(type="password" id="Rpassword" name ="Rpassword")
            br
            label(id="RegisterPasswordLabel2" for="Rpassword2") Wprowadz hasło ponownie:
            br
            input(type="password" id="Rpassword2" name="Rpassword2")
            br
            input(type="submit" id="RegisterButton" value="ZAREJESTRUJ SIĘ")