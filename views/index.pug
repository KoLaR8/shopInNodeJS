extends layout

block content
  div#container
    div#categoriesMenu
      ol
        each val in categories
          li
            a(href= '/filters/' + val.name style="color:black; font-size: large;")
              div.categoryName #{val.name}

    div#mainContent
      ul
        each val in products
          li
            a(href= '/products/' + val.product_id style="color:black; font-size: large;")
              div.productContainer
                img(src="data:image/jpg;base64," + val.image class="images")
                p.productName #{val.name}
                p.productOldPrice #{val.old}
                p.productPrice #{val.price} z≈Ç
