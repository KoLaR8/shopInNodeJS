extends loggedLayout
block content
    div#container
        div#categoriesMenu
            ol
                each val in categories
                    li
                        a(href= '/loggedFilters/' + val.name style="color:black;")
                            div.categoryName #{val.name}

        div#mainContent
            ul
                each val in products
                    li
                        a(href= '/loggedProducts/' + val.product_id style="color:black;")
                            div.productContainer
                                img(src="data:image/jpg;base64," + val.image class="images")
                                p.productName #{val.name}
                                p.productOldPrice #{val.old}
                                p.productPrice #{val.price} z≈Ç
